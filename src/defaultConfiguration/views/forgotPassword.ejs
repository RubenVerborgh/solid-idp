<!DOCTYPE html>
<html >
  <head>
    <meta charset="UTF-8">
    <title>Forgot Password</title>
  </head>
  <body>
    <div class="login-card">
      <h1>Forgot Password</h1>
      <form autocomplete="off" action="<%= details.pathPrefix %>/interaction/<%= details.uuid %>/forgotpassword" method="post">

        <label>Username:</label>
        <input required type="username" name="username" placeholder="tim@example.com" />

        <button type="submit" name="submit" class="login login-submit">Send Recovery Email</button>
      </form>

      <a href="<%= details.pathPrefix %>/interaction/<%= details.uuid %>/login">[ Log In ]</a>
    </div>
    <div class="login-card">
      <div class="grant-debug">
        <%- JSON.stringify(details.interaction, null, 4) %>
      </div>
      <div class="grant-debug">
        <%- JSON.stringify(details.params, null, 4) %>
      </div>
    </div>
  </body>
</html>